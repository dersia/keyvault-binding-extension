<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>SiaConsulting.Azure.WebJobs.Extensions.KeyVaultExtension.Blobs</AssemblyName>
    <RootNamespace>SiaConsulting.Azure.WebJobs.Extensions.KeyVaultExtension.Blobs</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.0.2.1</Version>
    <Authors>Sia Consulting Ltd.</Authors>
    <Product>Azure Functions KeyVault Binding</Product>
    <PackageId>SiaConsulting.Azure.WebJobs.Extensions.KeyVaultExtension.Blobs</PackageId>
    <Description>Binding Extension for Azure Functions to access Azure KeyVault for Blobs</Description>
    <Copyright>2019 Sia Consulting Ltd.</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/dersia/keyvault-binding-extension</PackageProjectUrl>
    <RepositoryUrl>https://github.com/dersia/keyvault-binding-extension</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <Nullable>enable</Nullable>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Azure.KeyVault" Version="3.0.4" />
    <PackageReference Include="Microsoft.Azure.KeyVault.Extensions" Version="3.0.4" />
    <PackageReference Include="Microsoft.Azure.Services.AppAuthentication" Version="1.3.1" />
    <PackageReference Include="Microsoft.Azure.Storage.Blob" Version="11.1.1" />
    <PackageReference Include="Microsoft.Azure.WebJobs" Version="3.0.14" />
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\\..\\LICENSE" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SiaConsulting.AzureWebJobs.Extensions.KeyVaultExtension.Common\SiaConsulting.AzureWebJobs.Extensions.KeyVaultExtension.Common.csproj" />
  </ItemGroup>

</Project>
